<div class="modal" id="login-modal">
	<form class="form-group-lg" action="/login" method="POST">
		<div class="modal-dialog">
			<div class="modal-content">
			  <div class="modal-header">
				<h4 class="modal-title">User Login</h4>
			  </div>
			  <div class="modal-body">
				<div class="form-control-static">
					<label for="login"><i class="glyphicon glyphicon-user"></i> </label>
					<input type="text" id="login" name="login" placeholder="username" value="test" />
				</div>
				<div class="form-control-static">
					<label for="password"><i class="glyphicon glyphicon-send"></i> </label>
					<input type="password" id="password" name="password" placeholder="Your password" />
				</div>
			</div>
			<div class="modal-footer">
				<input type="submit" class="btn btn-primary btn" value="Login" />
				<button type="button" class="btn btn-danger clost" aria-hidden="true" data-dismiss="modal">&times;</button>
			</div>
		</div>
	</form>
</div>